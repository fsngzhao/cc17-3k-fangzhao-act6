<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="#E0E0E0">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recipe_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Day 1"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipt Name"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/recipe_day"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample"
            app:layout_constraintTop_toBottomOf="@id/recipe_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start your day with a healthy and delicious breakfast. Spread peanut butter on toasted bread top one slice with banana and the other with mixed berries. A perfect balance of sweetness and protein to fuel your morning."
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/recipe_image"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>